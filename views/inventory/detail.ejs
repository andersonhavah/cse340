<!-- Content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { 
    res.redirect('/') 
} %>

<%- messages() %>

<%- grid %>

<!-- <hr> -->
<div id="reviews">
    <h2>Customer Reviews</h2>

    <% if (locals.loggedin) { %>
        <% // Logic for Screen Name: 1st initial of First Name + Last Name const
            screenName=locals.accountData.account_firstname.charAt(0) + locals.accountData.account_lastname %>
            <h3>Add Your Review</h3>
            <form action="/review/add" method="post">
                <fieldset>
                    <label>Screen Name:</label>
                    <input type="text" readonly value="<%= screenName %>" class="readonly-input">

                    <label for="review_text">Review:</label>
                    <textarea id="review_text" name="review_text" required rows="4"></textarea>

                    <input type="hidden" name="inv_id" value="<%= data.inv_id %>">
                    <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">

                    <button type="submit">Submit Review</button>
                </fieldset>
            </form>
            <% } else { %>
                <p>You must <a href="/account/login">login</a> to write a review.</p>
                <% } %>

                    <% if (reviews && reviews.length> 0) { %>
                        <ul>
                            <% reviews.forEach(function(review) { %>
                                <li>
                                    <p><strong>
                                            <%= review.account_firstname.charAt(0) + review.account_lastname %>
                                        </strong> wrote:</p>
                                    <p><em>
                                            <%= new Date(review.review_date).toLocaleString() %>
                                        </em></p>
                                    <p>
                                        <%= review.review_text %>
                                    </p>
                                </li>
                                <% }) %>
                        </ul>
                        <% } else { %>
                            <p>Be the first to write a review!</p>
                            <% } %>
</div>