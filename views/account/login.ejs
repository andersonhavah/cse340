<div class="login-container">
    <!-- Header -->
    <div class="login-header">
        <h1><%= title %></h1>
        <p>Access your account</p>
    </div>

<% if (locals.errorMessage) { %>
    <div class="message error">
        <%= errorMessage %>
    </div>
<% } %>
<% if (locals.successMessage) { %>
    <div class="message success">
        <%= successMessage %>
    </div>
<% } %>

<!-- Login Form -->
<form id="loginForm" action="/account/login" method="post">
    <!-- Email Input -->
    <div class="input-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="account_email" placeholder="you@example.com" class="input-field" required>
    </div>

    <!-- Password Input with Toggle -->
    <div class="input-group">
        <label for="password">Password</label>
        <div class="password-wrapper">
            <input type="password" id="account_password" name="account_password" placeholder="••••••••••••" class="input-field"
                required>
            <button type="button" id="togglePassword">
                <!-- Eye Icon (Open) -->
                <svg id="eye-open" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd"
                        d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.022 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                        clip-rule="evenodd" />
                </svg>
                <!-- Eye Icon (Closed/Slashed) -->
                <svg id="eye-closed" class="hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                    fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z"
                        clip-rule="evenodd" />
                    <path
                        d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A10.025 10.025 0 01.458 10c1.274 4.057 5.022 7 9.542 7 1.126 0 2.206-.24 3.22-.672l-1.066-1.066z" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Password Requirements Message -->
    <div class="password-requirements">
        <p>Password must include at least 12 characters, 1 uppercase letter, 1 number, and 1 special character.</p>
    </div>

    <!-- Submit Button -->
    <div class="input-group">
        <button type="submit" class="submit-btn">Login</button>
    </div>
</form>

<!-- Registration Link -->
<p class="register-link">
    No account yet?
    <a href="/account/register">Sign-up here</a>
</p>
</div>

<script src="/js/script.js"></script>


